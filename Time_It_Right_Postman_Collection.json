{
  "info": {
    "name": "Time It Right - Game API",
    "description": "Complete API collection for Time It Right timer game with WebSocket support",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "auth": {
    "type": "bearer",
